<center>
<div class="topic-header">
  <h3> <%= @tag.name %> </h3>
  <h2>The following questions relate to <%= @tag.name %>.</h2>
  <% if @tag.questions.empty? %>
    <h4>Sorry! There are no questions related to <%= @tag.name %> yet! Be the first!</h4>
  <% else %>
    <% @tag.questions.reverse.each do |question| %>
      <h2><%= link_to question.title, question_path(question) %></h2>
      <h4>Asked by <img src="<%= question.user.image %>" height="50"> <%= question.user.name %> </h4>
      <% if question.answers.length == 1 %>
        <h4><%= question.answers.length %> answer</h4>
      <% else %>
        <h4><%= question.answers.length %> answers</h4>
      <% end %>
      <h4>&hearts;</h4>  
    <% end %>
  <% end %>
</div>
<p><%= link_to 'Back', tags_path %></p>
<br>
<br>
<br>
</center>
